{
    "name": "nasc-touchbar",
    "displayName": "Nasc VSCode Touchbar",
    "description": "Adds useful tools to your macbook touchbar.",
    "version": "0.0.1",
    "publisher": "felipenmoura",
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:nasc.touchBar.goToDefinition",
        "onCommand:nasc.touchBar.addCursorAbove",
        "onCommand:nasc.touchBar.addCursorBellow"
    ],
    "main": "./extension",
    "capabilities" : {
        "definitionProvider" : "true"
    },
    "contributes": {
        "commands": [
            {
                "command": "nasc.touchBar.goToDefinition",
                "group": "nasc",
                "when": "editorHasSelection",
                "title": "‚Üí∆í"
            },
            {
                "command": "nasc.touchBar.addCursorAbove",
                "group": "nasc",
                "title": "‚Üëùô∏"
            },
            {
                "command": "nasc.touchBar.addCursorBellow",
                "group": "nasc",
                "title": "‚Üìùô∏"
            }
        ],
        "menus": {
            "touchBar": [
              {
                "command": "nasc.touchBar.goToDefinition",
                "group": "nasc"
              },
              {
                "command": "nasc.touchBar.addCursorAbove",
                "group": "nasc"
              },
              {
                "command": "nasc.touchBar.addCursorBellow",
                "group": "nasc"
              }
            ]
           }        
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.0",
        "@types/mocha": "^2.2.42"
    }
}
